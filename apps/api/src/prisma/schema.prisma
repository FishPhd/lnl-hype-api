generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
  output   = "../prisma/generated/"
  emitOnly = "models"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model restaurants {
  id       BigInt  @id
  name     String
  rating   BigInt
  guide    String
  img      String
  link     String?
  location String
  cuisine  String
  lat      Float
  long     Float
  year     BigInt?

  @@index([id], map: "ix_restaurants_id")
}
