generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
  emitOnly = "models"
  output   = "../prisma/generated/"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id       BigInt  @id
  name     String
  rating   BigInt
  guide    String
  img      String
  link     String
  location String
  lat      Float?
  long     Float?
  year     BigInt
  cuisine  String

  @@index([id], map: "ix_restaurants_id")
  @@map("restaurants")
}
